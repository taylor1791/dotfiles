# A configuration file for zathura. See `man zathurarc` for more details.

# Use clipboard instead of primary.
set selection-clipboard        clipboard

# Replace $HOME with ~ in the window title.
set window-title-home-tilde    true

# Only show the basename in the statusbar.
set statusbar-basename true


# A OneDark theme for zathura
set font                       "mononoki 13"

set default-bg                 "#282C34"
set default-fg                 "#ABB2BF"
set statusbar-bg               "#2C323C"
set statusbar-fg               "#ABB2BF"
set inputbar-bg                "#282C34"
set inputbar-fg                "#ABB2BF"

# To test, use tab completion. E.g :open <TAB>
set completion-bg              "#2C323C"
set completion-fg              "#ABB2BF"
set completion-group-bg        "#2C323C"
set completion-group-fg        "#ABB2BF"
set completion-highlight-fg    "#2C323C"
set completion-highlight-bg    "#61AFEF"

set render-loading-bg          "#2C323C"
set render-loading-fg          "#61AFEF"

# To test, search for text
set highlight-color            "#61AFEF"
set highlight-active-color     "#C678DD"

# To test, open the index with <TAB>.
set index-bg                   "#282C34"
set index-fg                   "#ABB2BF"
set index-active-bg            "#61AFEF"
set index-active-fg            "#2C323C"

# To test, select some text with the mouse.
set notification-bg            "#98C379"
set notification-fg            "#282C34"

set notification-warning-bg    "#E5C07B"
set notification-warning-fg    "#282C34"

# To test, set an unkown option. E.g :set chicken fried
set notification-error-bg      "#E06C75"
set notification-error-fg      "#282C34"

# Recolor the pdfs to match OneDark. Impressive.
set recolor                    true
set recolor-keephue            true
set recolor-darkcolor          "#ABB2BF"
set recolor-lightcolor         "#282C34"
